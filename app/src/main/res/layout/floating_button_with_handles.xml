<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Floating button -->
    <Button
        android:id="@+id/floating_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Floating"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_centerInParent="true" />

    <!-- Top-left corner handle -->
    <View
        android:id="@+id/handle_top_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_alignTop="@id/floating_button"
        android:layout_alignStart="@id/floating_button" />

    <!-- Top-right corner handle -->
    <View
        android:id="@+id/handle_top_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginEnd="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_alignTop="@id/floating_button"
        android:layout_alignEnd="@id/floating_button" />

    <!-- Bottom-left corner handle -->
    <View
        android:id="@+id/handle_bottom_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginStart="-10dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/floating_button"
        android:layout_alignStart="@id/floating_button" />

    <!-- Bottom-right corner handle -->
    <View
        android:id="@+id/handle_bottom_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@id/floating_button"
        android:layout_alignEnd="@id/floating_button" />
</RelativeLayout>
